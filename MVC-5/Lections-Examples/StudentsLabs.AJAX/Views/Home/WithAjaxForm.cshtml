@model StudentsLabs.AJAX.Models.Home.UserViewModel

@{
	ViewBag.Title = "Ajax Form";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/Custom/ajaxForm.js")" type="text/javascript"></script>

<div id="update-container">
	@using (Ajax.BeginForm("AjaxFormPost", "Home", 
						new AjaxOptions
						{
							UpdateTargetId = "update-container",
							Confirm = "Are you sure?",
							OnBegin = "ajaxForm.onBegin",
							OnComplete = "ajaxForm.onComplete",
							OnFailure = "ajaxForm.onFailure",
							OnSuccess = "ajaxForm.onSuccess",
							HttpMethod = "POST",
							InsertionMode = InsertionMode.InsertAfter
						}))
	{
		<div>
			<div class="editor-label">
				@Html.LabelFor(item => item.FirstName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(item => item.FirstName)
				@Html.ValidationMessageFor(item => item.FirstName)
			</div>
		</div>
		<div>
			<div class="editor-label">
				@Html.LabelFor(item => item.LastName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(item => item.LastName)
				@Html.ValidationMessageFor(item => item.LastName)
			</div>
		</div>

		<input type="submit" value="Save" />
	}
</div>